{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "sourceMap": true,
      "experimentalDecorators": true,  // Required for decorators
      "emitDecoratorMetadata": true    // Required for TypeORM
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }