{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES6",
      "strict": true,
      "esModuleInterop": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "sourceMap": true,
      "experimentalDecorators": true,  // Required for decorators
      "emitDecoratorMetadata": true,  // Required for TypeORM
      "moduleResolution": "Node",
      "allowJs": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }